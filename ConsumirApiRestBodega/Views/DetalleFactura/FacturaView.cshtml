@model ConsumirApiRestBodega.Models.FolderDetalleFacturaModel.SP_CONSULTAR_FACTURA_ResultModel
@{
    Layout = null;
}

<head>
    <link href="~/css/HojaDeEstilos.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet" />
</head>


<div class="container-factura-grid">

    <div id="target-emisor">
        <img src="~/Logos/distribuidora.png" alt="Alternate Text" width="100" height="100"/>
    </div>

    <div id="target-infoFact">
        <p class="titulo-negrita">Nº DE FACTURA: <span id="n-factura">@Model.codigo_factura</span></p>

    </div>
</div>

<table id="tablax2" class="table table-primary table-striped">
    <thead class="table">
        <tr class="cabecera-tabla">


            <th>Producto</th>
            <th>Precio unidad</th>
            <th>Cantidad</th>
            <th>SubTotal por unidad</th>
            <th>Total por Unidad</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.datosTablaFactura)
        {
            <tr class="cuerpo-tabla">
                <td>@item.nombre_producto</td>
                <td>@item.precio_unidad</td>
                <td>@item.cantidad</td>
                <td>@item.SubTotal_por_unidad</td>
                <td>@item.Total_por_Unidad</td>
            </tr>

        }
    </tbody>
</table>

<div id="container-totales">
    <p class="titulo-negrita">SubTotal: <span id="subtotal">@Model.subTotal</span> </p>
    <p class="titulo-negrita">Total: <span id="total">@Model.total</span> </p>

</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>